rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated (if you add auth later)
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Settings - read only for all, write only for admin (currently open for testing)
    match /settings/{document=**} {
      allow read: if true;
      allow write: if true; // Restrict this in production with proper auth
    }
    
    // Participants - allow read/write for all (experiment participants need to write)
    match /participants/{participantId} {
      allow read: if true;
      allow create: if true;
      // Allow update if participantId is not being changed, or if it matches the document ID
      allow update: if !('participantId' in request.resource.data) || 
                       request.resource.data.participantId == participantId;
      allow delete: if false; // Only admin can delete via admin dashboard
    }
    
    // Contributions - allow read/write for all
    match /contributions/{contributionId} {
      allow read: if true;
      allow create: if true;
      allow update: if false; // Contributions cannot be modified once submitted
      allow delete: if false;
    }
    
    // Payoffs - read only for all, write only by system (calculated automatically)
    match /payoffs/{payoffId} {
      allow read: if true;
      allow create: if true;
      allow update: if false;
      allow delete: if false;
    }
    
    // Groups - allow read/write for all
    match /groups/{groupId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if false;
    }
    
    // Rounds - read only for all, write only by system
    match /rounds/{roundId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if false;
    }
    
    // Simulated Contributions - allow read/write for all (needed for experiment logic)
    match /simulatedContributions/{simId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if false;
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

